<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/corner_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/send_memo_text"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextMemoNoteDate"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_form_item"
            android:ems="10"
            android:hint="@string/textInputTime"
            android:inputType="date"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editTextMemoTitle"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_form_item"
            android:ems="10"
            android:hint="@string/textInputTitle"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text="" />

        <Spinner
            android:id="@+id/GroupSelection"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_form_item"
            android:ems="10"
            android:hint="@string/select_group_hint"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editTextMemoContent"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_form_item"
            android:ems="10"
            android:gravity="top|start"
            android:hint="@string/textInputContent"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:text="" />

        <Button
            android:id="@+id/btnSubmitMemo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/submit_memo_shape"
            android:text="@string/submitMemo" />

    </LinearLayout>

</RelativeLayout>

