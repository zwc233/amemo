<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <!--    标题栏-->
    <com.example.amemo.widget.TitleLayout
        android:layout_marginTop="40dp"
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--    头像-->
    <LinearLayout
        android:id="@+id/ll_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <com.example.amemo.widget.RoundImageView
            android:id="@+id/ri_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像"
            android:textColor="#EFEFEF"
            android:layout_gravity="center"
            android:paddingLeft="20dp"/>

    </LinearLayout>
    <!--    编辑界面，此处可以写成一个ItemGroup上传至com上-->
    <com.example.amemo.widget.UserInfoItemGroup
        android:id="@+id/ig_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:jt_visible="false"
        app:paddingLeft="20dp"
        app:edt_hint_content="3190102207"
        app:title="ID号" />

    <com.example.amemo.widget.UserInfoItemGroup
        android:id="@+id/ig_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:edt_hint_content="修改昵称"
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="张可攀" />

    <com.example.amemo.widget.UserInfoItemGroup
        android:id="@+id/ig_gender"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:edt_hint_content="性别"
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="男"/>

    <com.example.amemo.widget.UserInfoItemGroup
        android:id="@+id/ig_region"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:edt_hint_content="未选择"
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="常住地" />

    <com.example.amemo.widget.UserInfoItemGroup
        android:id="@+id/ig_brithday"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:edt_hint_content="未选择"
        app:paddingLeft="@dimen/padding_left_and_right"
        app:title="生日" />
</LinearLayout>
